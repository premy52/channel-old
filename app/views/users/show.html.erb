<article id="user">

	<header>
	<h1> User Name: <%= @user.name %> </h1>
	</header>
		<p> <strong>email: </strong><%= @user.email %></p>
		<p> <strong> original signup date: </strong><%= @user.created_at %></p>
		<p> <strong>latest update: </strong><%= @user.updated_at %></p>


  <footer>
    <nav>
	    <% if current_user?(@user) %>
				<%= link_to 'Edit Your Account', edit_user_path(@user), class: 'button'  %>
				<%= link_to 'Delete Your Account', @user, 
										method: :delete, 
										data: {confirm: "Are you sure you want to delete #{@user.name}?"},
										class: 'button' %>
			<% end %>
    </nav>
  </footer>


</article>